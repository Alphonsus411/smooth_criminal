{
  "name": "smooth-criminal-extension",
  "displayName": "Smooth Criminal",
  "description": "Analiza Python AST y sugiere optimizaciones",
  "version": "0.0.1",
  "publisher": "smooth",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:smooth-criminal.analyze"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smooth-criminal.analyze",
        "title": "Smooth Criminal: Analizar AST"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.84.0",
    "@vscode/test-electron": "^2.3.0",
    "mocha": "^11.7.2",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  }
}
